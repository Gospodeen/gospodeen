#include "pch.h"
#include <iostream>
#include <Math.h>

using namespace std;

void main()
{
	setlocale(LC_ALL, "Russian");
	int menu;
	cout << "Введите номер задания (1-5):";
	cin >> menu;
	float x1, x2, x3, y1, y2, y3;
	switch (menu)
	{
		case 1: 
		{
			cout << "Введите координаты первой точки (х1, y1):";
			cin >> x1 >> y1;
			cout << "Введите координаты первой точки (х2, y2):";
			cin >> x2 >> y2;
			cout << "Расстояние между точками А(" << x1 << ";" << y1 << ") и B(" << x2 << ";" << y2 << ") равно " << sqrt(pow(x1-x2, 2) + pow(y1 - y2, 2));
		} break;
		case 2:
		{
			cout << "Введите координаты точек A(х1), B(x2), C(x3):";
			cin >> x1 >> x2 >> x3;
			cout << "Длина отрезка AB равна " << abs(x1-x2) << ", длина отрезка BC равна " << abs(x2 - x3) << ", а сумма их длин равна " << abs(x1 - x2) + abs(x2 - x3);
		} break;
		case 3:
		{
			cout << "Введите координаты точек A(х1), C(x2), B(x3), при A<C<B";
			cin >> x1 >> x2 >> x3;
			cout << "Длина отрезка AC равна" << abs(x1 - x2) << ", длина отрезка CB равна " << abs(x2 - x3) << ", а произведение их длин равна " << abs(x1 - x2) * abs(x2 - x3);
		} break;
		case 4:
		{
			cout << "Введите координаты вершин прямоугольного треугольника A(х1, y1), B(x2, y2) (угол С равен 90 градусам):";
			cin >> x1 >> y1 >> x2 >> y2;
			cout << "Длина отрезка AC равна" << abs(x1 - x2) << ", длина отрезка CB равна " << abs(x2 - x3) << ", а произведение их длин равна " << abs(x1 - x2) * abs(x2 - x3);
		} break;

	}
}
